@model List<CourseViewModel>
<h1>@ViewData["Title"]</h1>
@foreach(CourseViewModel course in Model)
{
<div class="row">
    <div class="col-md-1">
        <img src="@course.ImagePath" width="75" height="65" alt="@course.Title">      
    </div>
    <div class="col-md-5">
        <h2>@course.Title</h2>
        <author>@course.Author</author>
    </div>
    <div class="col-md-2" title="@course.Rating">
        @for(int i =1; i <= 5; i++)
        {
            if(course.Rating >= i)
            {
              <i class="fas fa-star text-warning"></i>
            }
            else if(course.Rating > i-1)
            {
                <i class="fas fa-star-half-alt text-warning"></i>
            }
            else
            {
                <i class="far fa-star text-warning"></i>
            }
        }
    </div>
    <div class="col-md-2">
      <span class="text-dark">@course.CurrentPrice</span><br/>
      @if(!course.CurrentPrice.Equals(course.FullPrice))
      {
        <span class="text-secondary"><s>@course.FullPrice</s></span>
      }
    </div>
    <div class="col-md-2">
        <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="@course.Id">Dettaglio del corso</a>
    </div>
</div>
}
